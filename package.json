{
    "name": "locale-detector",
    "displayName": "locale detector",
    "description": "Check if there is text with the same content in the file",
    "version": "0.0.5",
    "author": {
        "name": "yonneyyang"
    },
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:javascript",
        "onLanguage:typescript"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "configuration": {
            "title": "Locale Detector",
            "properties": {
                "local-detector.crossFile": {
                    "type": "boolean",
                    "default": false,
                    "description": "是否跨文件检测"
                },
                "local-detector.languages": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [
                        "en",
                        "en-US"
                    ],
                    "description": "支持检测的语言"
                }
            }
        }
    },
    "publisher": "yonneyyang",
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src",
        "test": "vscode-test"
    },
    "devDependencies": {
        "@types/vscode": "^1.80.0",
        "@types/mocha": "^10.0.10",
        "@types/node": "20.x",
        "@typescript-eslint/eslint-plugin": "^8.28.0",
        "@typescript-eslint/parser": "^8.28.0",
        "eslint": "^9.23.0",
        "typescript": "^5.8.2",
        "ts-loader": "^9.5.2",
        "webpack": "^5.98.0",
        "webpack-cli": "^6.0.1",
        "@vscode/test-cli": "^0.0.10",
        "@vscode/test-electron": "^2.4.1"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/hhfg/locale-detector.git"
    }
}
